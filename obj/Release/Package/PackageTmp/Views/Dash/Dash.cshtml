
@{ 

    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/Dash.css"/>
    <title>Index</title>
</head>
<body>
    <div class="top-banner">

        <div class="overlay"></div>


        <div class="labelcont">
            <label class="welcome">Welcome!<br>@TempData["fname"] @TempData["lname"]</label>
        </div>
        <div class="photocont">
            <div class="picoverlay"></div>
            <img id="myimg"  style="width:100%;height:100%;object-fit:cover;display: block;" />
        </div>

        <button id="signout">Logout</button>
    </div>

    <script>

        document.getElementById("signout").onclick = function (e) {
           
            let url = `${window.location.origin}/Dash/Logout`;
            window.location.href = url;


        }

        async function loadUserPhoto ()  {


            let response = await fetch(`${window.location.origin}/Dash/Imagers` , {method : "POST"});
            let result = await response.blob();

            let imageUrl = URL.createObjectURL(result);

            document.getElementById("myimg").src = imageUrl;

        }

        loadUserPhoto();


    </script>
</body>
</html>